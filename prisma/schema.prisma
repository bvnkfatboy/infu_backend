generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String      @id @default(auto()) @map("_id") @db.ObjectId
  email     String      @unique
  password  String?
  type      Type     @default(influencer)
  role      Role     @default(USER)
  provider  Provider @default(Mail)
  name String? @default("")
  image String? @default("")
  profile   Profile?  @map("profile")
  createdAt DateTime @default(now())
  updatedAt DateTime? 
  socialId  String? @default("")
}



type Profile {
  bio    String? @default("")
  birthday DateTime? 
  weight String? @default("")
  height String? @default("")
  gender String? @default("")
  lgbt String? @default("")
  companytype CompanyType?
}

model PasswordReset {
  id        String      @id @default(auto()) @map("_id") @db.ObjectId
  email     String @unique
  token     String @unique
  createdAt DateTime @default(now())
  expiresAt DateTime?
}

enum Role {
  USER
  ADMIN
}

enum Type {
  influencer
  Marketeer
}

enum CompanyType {
  Company
  Agency
  Person
}

enum Provider {
  Facebook
  Google
  Line
  Mail
}