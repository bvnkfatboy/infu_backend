generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  email String @unique
  password String
  role    Role     @default(USER)
  type Type @default(influencer)
  profile Profile @map("profile")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

type Profile {
  // id     String @id @default(auto()) @map("_id") @db.ObjectId
  img_profile String?
  bio    String?
  first_name String
  last_name String
  nickname String?
  date_of_birth DateTime @default(now())
  weight String?
  height String?
  gender String?
  lgbt String?
  companytype CompanyType? @default(Company)
  // user   User   @relation(fields: [userId], references: [id])
  // userId String @unique @db.ObjectId
}



model PasswordReset {
  id        String      @id @default(auto()) @map("_id") @db.ObjectId
  email     String @unique
  token     String @unique
  createdAt DateTime @default(now())
  expiresAt DateTime?
}

enum Role {
  USER
  ADMIN
}

enum Type {
  influencer
  Marketeer
}

enum CompanyType {
  Company
  Agency
  Person
}
